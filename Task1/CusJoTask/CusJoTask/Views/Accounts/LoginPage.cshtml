@model CusJoTask.ViewModels.LoginViewModel
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login Page</h2>

@using (Html.BeginForm("Index", "Accounts"))
{
<div class="form-group">
    <label>Name</label>
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
</div>
<div class="form-group">
    <label>Email</label>
    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
</div>
    <button type="Log In" class="btn btn-primary">Save</button>

}

